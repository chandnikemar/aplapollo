<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#F7F7F7" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#D0D0D0" />

    <!-- Rounded corners -->
    <corners android:radius="6dp" />

    <!-- Inner padding -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" />

</shape>
