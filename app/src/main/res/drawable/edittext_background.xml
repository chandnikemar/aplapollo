<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />  <!-- white background -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />  <!-- light gray border -->

    <!-- No corners radius -->
    <corners android:radius="0dp" />

    <!-- Padding inside the EditText -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
