<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.Apolloapl" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@android:color/black</item>

        <!-- AppBar / Toolbar -->
<!--        <item name="topAppBarStyle">@style/Widget.Apollo.TopAppBar</item>-->
<!---->
        <!-- Buttons -->
        <item name="materialButtonStyle">@style/Widget.Apollo.MaterialButton</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Apollo.Headline</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Apollo.Body</item>
    </style>

    <style name="Theme.Apolloapl" parent="Base.Theme.Apolloapl" />

