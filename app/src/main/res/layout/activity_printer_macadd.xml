<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mvTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/idLayoutHeader"
                layout="@layout/action_bar_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSelectPrinterSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvSelectPrinter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ENTER PRINTER MAC ADDRESS :"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_text"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tltvPrinterSelectSpinner" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tltvPrinterSelectSpinner"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnUpdateSelectPrinter"
                app:layout_constraintTop_toBottomOf="@id/tvSelectPrinter"
                app:layout_constraintHorizontal_weight="0.6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSelectPrinter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Printer / MAC Address"
                    android:inputType="text"
                    android:digits="0123456789ABCDEF:"

                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_text" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateSelectPrinter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Update"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_text"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toTopOf="@id/tltvPrinterSelectSpinner"
                app:layout_constraintBottom_toBottomOf="@id/tltvPrinterSelectSpinner"
                app:layout_constraintStart_toEndOf="@id/tltvPrinterSelectSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="0.2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
