<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:gravity="center_vertical">

    <!-- Column 1: Checkbox -->
    <CheckBox
        android:id="@+id/checkBoxC1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" />

    <!-- Column 2: Blue background with text -->
    <TextView
        android:id="@+id/textC2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="B1233446"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:background="@color/blue" />

    <!-- Column 3: Grey text -->
    <TextView
        android:id="@+id/textC3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="500*6*4000"
        android:gravity="center"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <!-- Column 4: Input field -->
    <EditText
        android:id="@+id/editC4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Enter Wt."
        android:inputType="numberDecimal"
        android:gravity="center"
        android:background="@drawable/edittext_background"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

</TableRow>
