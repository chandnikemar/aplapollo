<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commanBatchDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/table_border"
    android:layout_margin="8dp"
    android:padding="4dp"
    android:shrinkColumns="0,2"
    android:stretchColumns="1,3">

    <!-- ROW 1 : Barcode No / Width -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Barcode No -->
        <TextView
            android:text="Barcode No"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_weight="2"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvBarcodeNo"
            android:text="BC-987654321"
            android:padding="8dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"/>

        <!-- Width -->
        <TextView
            android:text="Width"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvWidth"
            android:text="1200 mm"
            android:padding="8dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"/>
    </TableRow>

    <!-- ROW 2 : Thickness / Grade -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Thickness"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvThickness"
            android:text="5.0 mm"
            android:padding="8dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:text="Grade"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvGrade"
            android:text="S355"
            android:padding="8dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"/>
    </TableRow>



</TableLayout>
