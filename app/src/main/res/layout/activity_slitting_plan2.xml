        <!-- Scan Coil & View Stock -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutScanCoil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="visible">

            <!-- Scan Coil & View Stock -->
            <LinearLayout
                android:id="@+id/layoutScanRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
               >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Scan a coil"
                    app:boxBackgroundMode="none">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etScanCoil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:imeOptions="actionDone"/>

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Stock"
                    android:textStyle="bold"
                    android:textColor="#155E7C"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:id="@+id/viewScanDivider"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="#155E7C"
                app:layout_constraintTop_toBottomOf="@id/layoutScanRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Details -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutBatchDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TableLayout
                android:id="@+id/tableBatchDetailsTable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Row 1 -->
                <TableRow>

                    <TextView
                        android:id="@+id/tvscBatch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="6dp"
                        android:text="Batch: B123131313" />

                    <TextView
                        android:id="@+id/tvscQcDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="QC Date: 12/12/2025"/>

                    <TextView
                        android:id="@+id/tvscRow1Empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>
                </TableRow>

                <!-- Row 2 -->
                <TableRow>

                    <TextView
                        android:id="@+id/tvscSupplier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="Supplier: JSW Steel Ltd"/>

                    <TextView
                        android:id="@+id/tvscGrnDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="GRN Date: 12/12/2025"/>

                    <TextView
                        android:id="@+id/tvscRow2Empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>
                </TableRow>

                <!-- Row 3 -->
                <TableRow>

                    <TextView
                        android:id="@+id/tvscWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="Weight: 23900 Kg"/>

                    <TextView
                        android:id="@+id/tvscWidth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="W: 1200"/>

                    <TextView
                        android:id="@+id/tvscThickness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="Thickness: 6.00"/>
                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Buttons -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Clear"
                android:background="@drawable/button_clear"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnSubmit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginEnd="8dp" /> <!-- Space to right -->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Submit"
                android:background="@drawable/button_generate"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/btnClear"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginStart="8dp" /> <!-- Space to left -->

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout></LinearLayout>
</layout>