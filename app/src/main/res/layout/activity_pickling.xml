<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.PicklingActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header -->
            <include
                android:id="@+id/idLayoutHeader"
                layout="@layout/action_bar_comman_hedaer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Shift & Station Table -->
            <TableLayout
                android:id="@+id/tableShiftStation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:stretchColumns="*"
                app:layout_constraintTop_toBottomOf="@id/idLayoutHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <include layout="@layout/tabel_row_common" />
            </TableLayout>

            <!-- Common Input Row -->
            <include
                android:id="@+id/commanInputRow"
                layout="@layout/comman_inputrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tableShiftStation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Batch Details Table -->
            <TableLayout
                android:id="@+id/tableBatchDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:stretchColumns="*"
                app:layout_constraintTop_toBottomOf="@id/commanInputRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <include
                    android:id="@+id/commanBatchDetails"
                    layout="@layout/comman_batchdetails" />
            </TableLayout>

            <!-- Labels and Buttons -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLabelsButtons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tableBatchDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Label -->
                <TextView
                    android:id="@+id/labelThickness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Desired Thickness:"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/valueThickness"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_weight="2" />

                <TextView
                    android:id="@+id/valueThickness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3MM"

                    app:layout_constraintStart_toEndOf="@id/labelThickness"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelThickness"
                    app:layout_constraintHorizontal_weight="3" />

                <!-- Buttons Row -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_clear"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toBottomOf="@id/valueThickness"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/buttonRight"
                    app:layout_constraintHorizontal_weight="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonRight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_generate"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintTop_toBottomOf="@id/valueThickness"
                    app:layout_constraintStart_toEndOf="@id/buttonLeft"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
